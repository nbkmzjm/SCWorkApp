extends ../layout/layout.jade

	
block title 
	title Users

block header
	#header
	include ../layout/header.jade

block horMenu
	include ../layout/horMenu.jade

block content
	#container
		ul(class="nav nav-tabs")
			li(class="active")
				a(data-toggle="tab" href="#userList") Users
			li
				a(data-toggle="tab" href="#userForm") Add User

		div(class="tab-content")
			div(id="userList" class="tab-pane fade in active")
				p UserList
			div(id="userForm" class="tab-pane")
				br
				form(class="form-horizontal" role="form")
					div(class="form-group")
						label(class="control-label col-sm-1" for="name") Name
						div(class="col-sm-3")
							input(type="email" class="form-control" id="name" name="name" placeholder="Enter Name")
					div(class="form-group")
						label(class="control-label col-sm-1" for="email") Email
						div(class="col-sm-3")
							input(type="email" class="form-control" id="email" name="email" placeholder="Enter Email")
					div(class="form-group")
						label(class="control-label col-sm-1" for="username") Username
						div(class="col-sm-3")
							input(type="email" class="form-control" id="username" name="username" placeholder="Enter Username")
					div(class="form-group")
						label(class="control-label col-sm-1" for="password") Password
						div(class="col-sm-3")
							input(type="email" class="form-control" id="password" name="password" placeholder="Enter Password")
					div(class="form-group")
						label(class="control-label col-sm-1" for="title") Title
						div(class="col-sm-3")
							select(name="title")
								option(value="none") Select One
								option(value="pharmacist") Pharmacist
								option(value="manager") Manager
								option(value="tech2") Technician 2
								option(value="tech3") Technician 3
					div(class="form-group")
						div(class="col-sm-offset-1 col-sm-3")
							button(type="submit" class="btn btn-primary") Submit
    


		

	

